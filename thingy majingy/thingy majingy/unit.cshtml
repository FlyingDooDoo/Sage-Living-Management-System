<body>

    <div id="wrapper">

        <!-- Navigation -->
        @RenderPage("~/include/nav.cshtml")

        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    @RenderPage("~/include/property_sidenav.cshtml")
                    @if (Request["id"] != null)
                    {
                        <div class="col-lg-8 col-md-8 col-sm-9">
                            <h1>Unit @number</h1>
                            <br>
                            <br>
                            <form class="form-horizontal" id="unit_info_form">
                                <fieldset>
                                    <legend>Information</legend>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Unit</label>
                                        <div class="col-lg-10">
                                            <input type="text" class="form-control" value="@number">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Property</label>
                                        <div class="col-lg-10">
                                            <input type="text" class="form-control" value="@property" disabled>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Owner</label>
                                        <div class="col-lg-10">
                                            <input type="text" class="form-control" value="@owner">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Notes</label>
                                        <div class="col-lg-10">
                                            <textarea form="user_info_form" class="form-control" value="@notes">@notes</textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-10 col-lg-offset-2">
                                            <button type="reset" class="btn btn-default">Cancel</button>
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                            <form class="form-horizontal">
                                <fieldset>
                                    <legend>Rooms</legend>
                                    <div class="form-group">
                                        <div class="col-lg-10">
                                            <table class="table table-striped table-hover ">
                                                <thead>
                                                    <tr>
                                                        <th>Room #</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var room in rooms.Keys)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <a href="~/units.cshtml?id=@room">@rooms[room]</a>
                                                            </td>
                                                            <td>
                                                                <a href="~/units.cshtml?action=delete&id=@room">delete</a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-lg-10 col-lg-offset-2">
                                            <button type="submit" class="btn btn-primary">Add new units</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    }

                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
