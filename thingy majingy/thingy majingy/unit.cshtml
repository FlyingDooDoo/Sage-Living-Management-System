@using System;
@using System.Data;
@using System.Data.SqlClient;
@using System.Diagnostics;
@{
    var connection_string = @"Data Source = (LocalDB)\MSSQLLocalDB; AttachDbFilename = " + Server.MapPath("~/App_Data/lease.mdf") + "; Integrated Security = True";
    SqlConnection connection = new SqlConnection(connection_string);
    connection.Open();
    SqlCommand command;
    SqlDataReader reader;
    //Getting Unit information
    string number = "";
    string owner = "";
    string notes = "";
    string property = "";
    Dictionary<int, string> units = new Dictionary<int, string>();
    Dictionary<int, string> rooms = new Dictionary<int, string>();
    if (Request["id"] != null)
    {
        //Get property info
        command = new SqlCommand("SELECT u.unit_number, u.owner, u.notes, p.address FROM dbo.unit u INNER JOIN dbo.property p ON u.property_id = p.id WHERE u.id = @_id", connection);
        command.Parameters.AddWithValue("@_id", Request["id"]);
        reader = command.ExecuteReader();
        reader.Read();
        number = Convert.ToString(reader[0]);
        owner = Convert.ToString(reader[1]);
        notes = Convert.ToString(reader[2]);
        property = Convert.ToString(reader[3]);
        reader.Close();

        /*
        //Get unit list associating with property
        command = new SqlCommand(@"SELECT u.id, u.name
            FROM dbo.unit u
            INNER JOIN dbo.property p
                ON p.id = u.property_id
            WHERE p.id = @_id;", connection);
        command.Parameters.AddWithValue("@_id", Request["id"]);
        reader = command.ExecuteReader();
        while (reader.Read())
        {
            units.Add(Convert.ToInt32(reader[0]), Convert.ToString(reader[1]));
        }
        reader.Close();
        */

        command = new SqlCommand("Select r.id, r.name FROM room r INNER JOIN unit u ON r.unit_id = u.id WHERE u.id = @id",connection);
        command.Parameters.AddWithValue("@id", Request["id"]);
        reader = command.ExecuteReader();
        while (reader.Read())
        {
            rooms.Add(Convert.ToInt32(reader[0]),reader[1].ToString());
        }
    }
    connection.Close();
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
