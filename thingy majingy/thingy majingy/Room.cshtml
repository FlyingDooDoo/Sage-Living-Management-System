@using System;
@using System.Data;
@using System.Data.SqlClient;
@using System.Diagnostics;
@{
    var connection_string = @"Data Source = (LocalDB)\MSSQLLocalDB; AttachDbFilename = " + Server.MapPath("~/App_Data/lease.mdf") + "; Integrated Security = True";
    SqlConnection connection = new SqlConnection(connection_string);
    connection.Open();
    SqlCommand command;
    SqlDataReader reader;

    //Getting Property information
    string room_name = "";

    Dictionary<int, string> rooms = new Dictionary<int, string>();
    Dictionary<int, string> furnitures = new Dictionary<int, string>();
    Dictionary<int, int> quantities = new Dictionary<int, int>();

    if (Request["id"] != null)
    {
        if (Request["action"] == "add_furniture")
        {
            Debug.WriteLine("Ye:" + Request["add_furniture_name"]);
            command = new SqlCommand("INSERT INTO dbo.furniture (name, qty, room_id) VALUES(@name, @qty, @roomID)", connection);
            command.Parameters.AddWithValue("@name", Request["add_furniture_name"]);
            command.Parameters.AddWithValue("@qty", Request["add_furniture_qty"]);
            command.Parameters.AddWithValue("@roomID", Request["id"]);
            reader = command.ExecuteReader();
            reader.Close();
        }
        else if (Request["action"] == "delete_furniture")
        {
            command = new SqlCommand("DELETE FROM dbo.furniture WHERE id=@id", connection);
            command.Parameters.AddWithValue("@id", Request["furniture_id"]);
            reader = command.ExecuteReader();
            reader.Close();
            Response.Redirect("~/room.cshtml?id="+Request["id"]);
        }
        else if (Request["action"] == "edit_room")
        {
            command = new SqlCommand("UPDATE dbo.room SET name=@name WHERE id=@id", connection);
            command.Parameters.AddWithValue("@name", Request["edit_room_name"]);
            command.Parameters.AddWithValue("@id", Request["id"]);
            reader = command.ExecuteReader();
            reader.Close();
        }
    }
    //Get room information
    command = new SqlCommand("SELECT * FROM dbo.room WHERE id = @id", connection);
    command.Parameters.AddWithValue("@id", Request["id"]);
    reader = command.ExecuteReader();
    reader.Read();
    room_name = Convert.ToString(reader["name"]);
    reader.Close();

    //Get room furniture

    command = new SqlCommand("SELECT * FROM dbo.furniture WHERE room_id=@id", connection);
    command.Parameters.AddWithValue("@id", Request["id"]);
    reader = command.ExecuteReader();

    while (reader.Read())
    {
        furnitures.Add(Convert.ToInt32(reader["id"]), Convert.ToString(reader["name"]));
        quantities.Add(Convert.ToInt32(reader["id"]), Convert.ToInt32(reader["qty"]));
    }
    reader.Close();
    /*Get furniture list associating with room
    command = new SqlCommand(@"SELECT f.id, f.name 
            FROM dbo.furniture f 
            INNER JOIN dbo.room r 
                ON r.id = f.room_id
            WHERE f.id = @_id;", connection);
    command.Parameters.AddWithValue("@_id", Request["id"]);
    reader = command.ExecuteReader();
    while (reader.Read())
    {
        furnitures.Add(Convert.ToInt32(reader[0]), Convert.ToString(reader[1]));
    }
    reader.Close();
    */
    command = new SqlCommand("SELECT * FROM dbo.room WHERE id = @_id", connection);
    command.Parameters.AddWithValue("@_id", Request["id"]);
    reader = command.ExecuteReader();
    reader.Read();
    room_name = Convert.ToString(reader["name"]);
    reader.Close();

    connection.Close();
}
