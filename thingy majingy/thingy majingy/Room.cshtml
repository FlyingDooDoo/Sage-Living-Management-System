                                                                <a href="~/room.cshtml?id=@Request["id"]&action=delete_furniture&id=@Request["id"]&furniture_id=@furniture">delete</a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-10 col-lg-offset-2">
                                            <button type="button" id="add_unit_toggle" class="btn btn-primary" onclick="addFurniture(this);">Add Furniture</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                            <form class="form-horizontal" method="post" action="~/room.cshtml" hidden>
                                <fieldset>
                                    <legend>Add New Furniture</legend>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Name</label>
                                        <div class="col-lg-10">
                                            <input type="text" class="form-control" name="add_furniture_name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Qty</label>
                                        <div class="col-lg-10">
                                            <input type="number" min="1" value="1" class="form-control" name="add_furniture_qty">
                                        </div>
                                    </div>                                  
                                    <input type="hidden" name="action" value="add_furniture" />
                                    <input type="hidden" name="id" value="@Request["id"]" />
                                    <div class="form-group">
                                        <div class="col-lg-10 col-lg-offset-2">
                                            <button type="submit" class="btn btn-primary">Add</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    }

                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
