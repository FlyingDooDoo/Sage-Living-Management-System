                                        <div class="col-lg-10">
                                            <input type="text" class="form-control" name="edit_property_parking" value="@parking">
                                        </div>
                                    </div>
                                    <input type="hidden" name="action" value="edit_property" />
                                    <input type="hidden" name="id" value="@Request["id"]" />
                                    <div class="form-group">
                                        <div class="col-lg-10 col-lg-offset-2">
                                            <button type="reset" class="btn btn-default">Cancel</button>
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                            <form class="form-horizontal">
                                <fieldset>
                                    <legend>Units</legend>
                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <table class="table table-striped table-hover ">
                                                <thead>
                                                    <tr>
                                                        <th>Unit #/name</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var unit in units.Keys)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <a href="~/unit.cshtml?id=@unit">@units[unit]</a>
                                                            </td>
                                                            <td>
                                                                <a href="~/unit.cshtml?action=delete&id=@unit">delete</a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-lg-10 col-lg-offset-2">
                                            <button type="button" id="add_unit_toggle" class="btn btn-primary" onclick="addUnit(this);">Add new units</button>
                                        </div>
                                    </div>

                                </fieldset>
                            </form>
                            <form class="form-horizontal" method="post" action="~/property.cshtml" hidden>
                                <fieldset>
                                    <legend>Add New Unit</legend>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Unit #/name</label>
                                        <div class="col-lg-10">
                                            <input type="text" class="form-control" name="add_unit_name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">owner</label>
                                        <div class="col-lg-10">
                                            <input type="text" class="form-control" name="add_unit_owner">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Additional Notes</label>
                                        <div class="col-lg-10">
                                            <input type="text" class="form-control" name="add_unit_note">
                                        </div>
                                    </div>
                                    <input type="hidden" name="action" value="add_unit" />
                                    <input type="hidden" name="id" value="@Request["id"]" />
                                    <div class="form-group">
                                        <div class="col-lg-10 col-lg-offset-2">
                                            <button type="submit" class="btn btn-primary">Add new units</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    }
                    
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <script>
        function addUnit(butt) {
            $("form:hidden").show();
            $("#add_unit_toggle").hide();
        }
    </script>
</body>

