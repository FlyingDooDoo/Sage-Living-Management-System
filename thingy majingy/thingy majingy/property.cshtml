@using System;
@using System.Data;
@using System.Data.SqlClient;
@using System.Diagnostics;
@{
    var connection_string = @"Data Source = (LocalDB)\MSSQLLocalDB; AttachDbFilename = " + Server.MapPath("~/App_Data/lease.mdf") + "; Integrated Security = True";
    SqlConnection connection = new SqlConnection(connection_string);
    connection.Open();
    SqlCommand command;
    SqlDataReader reader;

    //Getting Property information
    string address = "";
    string city = "";
    string province = "";
    string postal = "";
    string parking = "";
    Dictionary<int, string> units = new Dictionary<int, string>();
    if (Request["id"] != null)
    {
        if (Request["action"] != null)
        {
            if (Request["action"] == "add_unit")
            {
                command = new SqlCommand("INSERT INTO dbo.unit (unit_number,owner,notes,property_id) VALUES(@unit_number,@owner,@notes,@property_id)", connection);
                command.Parameters.AddWithValue("@unit_number", Request["add_unit_name"]);
                command.Parameters.AddWithValue("@owner", Request["add_unit_owner"]);
                command.Parameters.AddWithValue("@notes", Request["add_unit_note"]);
                command.Parameters.AddWithValue("@property_id", Request["id"]);
                reader = command.ExecuteReader();
                reader.Close();
            }
            if (Request["action"] == "edit_property")
            {
                command = new SqlCommand("UPDATE dbo.property SET address = @address, city = @city, province = @province, postal = @postal, parking = @parking WHERE id = @id", connection);
                command.Parameters.AddWithValue("@address", Request["edit_property_address"]);
                command.Parameters.AddWithValue("@city", Request["edit_property_city"]);
                command.Parameters.AddWithValue("@province", Request["edit_property_province"]);
                command.Parameters.AddWithValue("@postal", Request["edit_property_postal_code"]);
                command.Parameters.AddWithValue("@parking", Request["edit_property_parking"]);
                command.Parameters.AddWithValue("@id", Request["id"]);
                reader = command.ExecuteReader();
                reader.Close();
            }
        }
        //Get property info
        command = new SqlCommand("SELECT * FROM dbo.property WHERE id = @_id", connection);
        command.Parameters.AddWithValue("@_id", Request["id"]);
        reader = command.ExecuteReader();
        reader.Read();
        address = Convert.ToString(reader["address"]);
        city = Convert.ToString(reader["city"]);
        province = Convert.ToString(reader["province"]);
        postal = Convert.ToString(reader["postal"]);
        parking = Convert.ToString(reader["parking"]);
        reader.Close();

        //Get unit list associating with property
        command = new SqlCommand(@"SELECT u.id, u.unit_number 
            FROM dbo.unit u 
            INNER JOIN dbo.property p 
                ON p.id = u.property_id 
            WHERE p.id = @_id;",connection);
        command.Parameters.AddWithValue("@_id", Request["id"]);
        reader = command.ExecuteReader();
        while (reader.Read())
        {
            units.Add(Convert.ToInt32(reader[0]), Convert.ToString(reader[1]));
        }
        reader.Close();
    }
    connection.Close();
}
